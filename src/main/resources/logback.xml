<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property name="pattern" 
        value="%d{yyyyMMdd:HH:mm:ss.SSS} [%X{traceNo}] [%class.%method] %-5level  %msg%n" />
     
	
	<appender name="ROOT_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<layout name="StandardFormat" class="ch.qos.logback.classic.PatternLayout">
			<pattern>${pattern}</pattern>
		</layout>
	</appender>
	
	    <!-- 将信息写入文件 -->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">  
    <file>strutsTestLogger.log</file>  
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
      <fileNamePattern>D:/9f_new_web/logs/xxx.%d{yyyy-MM-dd}.log.txt</fileNamePattern>  
    </rollingPolicy>  
    <layout class="ch.qos.logback.classic.PatternLayout">  
      <pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{80} - %msg%n</pattern>  
    </layout>  
  </appender>  

	<logger name="com.webloan" level="info" additivity="false">
	 	<appender-ref ref="ROOT_CONSOLE"/>
	 	<appender-ref ref="file"/>
	</logger>
	
	
	<root level="info">
		<appender-ref ref="ROOT_CONSOLE"/>
	</root>
</configuration>