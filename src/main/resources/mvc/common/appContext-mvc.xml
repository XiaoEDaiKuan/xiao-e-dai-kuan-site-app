<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context.xsd 
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc.xsd">
   
	<context:annotation-config />
	
	<!-- Resolvers -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
	</bean>
	
<!--	<bean id="paraMethodResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">-->
<!--		<property name="paramName" value="_m"/>-->
<!--	</bean>-->
	
	<!-- Handler mapping -->
	<bean id="simpleUrlHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="queryProduct.do">productController</prop>
				<prop key="queryProductByUser.do">productController</prop>
				<!-- 用户注册 -->
				<prop key="createUser.do">userController</prop>
				<!-- 邮箱验证 -->
				<prop key="mailAuthentication.do">userController</prop>
				<prop key="handleCaptcha.do">captchaController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="productController" class="com.webloan.product.controller.ProductController">
<!--		<property name="commandClass" value="com.webloan.model.Product" />-->
		<property name="methodNameResolver">
			<bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver" />
		</property>
	</bean>
	
	<bean id="userController" class="com.webloan.user.controller.UserController">
		<property name="methodNameResolver">
			<bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver" />
		</property>
	</bean>
		<!-- 验证码 -->
	<bean id="captchaController" class="com.webloan.support.captcha.controller.CaptchaController" >
		<property name="captchaService" ref="captchaService"/>
		<property name="methodNameResolver">
			<bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver" />
		</property>
	</bean>
	
	
</beans>